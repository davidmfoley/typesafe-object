{
  "name": "typesafe-object",
  "version": "0.1.0",
  "repository": "https://github.com/davidmfoley/typesafe-object",
  "author": "davidmfoley@gmail.com",
  "license": "MIT",
  "private": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "examples": "for f in examples/*.ts; do yarn ts-node $f;done",
    "prettier": "prettier -c '{src,test}/**/*.ts'",
    "prepublish": "yarn build",
    "fix:prettier": "prettier --write '{src,test}/**/*.ts'",
    "test": "mocha",
    "test:watch": "nodemon -q -e ts --exec \"yarn test\" --watch src --watch test"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "mocha": {
    "extension": [
      "ts",
      "tsx"
    ],
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "watch-files": [
      "./src/**/*",
      "./test/**/*"
    ],
    "reporter": "dot"
  }
}
